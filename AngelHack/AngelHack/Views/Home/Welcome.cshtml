
@model IList<AngelHack.Models.ModelView.BookingView>
@{
    ViewBag.Title = "Welcome";
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

  
</head>
<body class="navbar-static-top" >

    <div class="navbar navbar-custom navbar-fixed-top" style="background-color:white;">
        <div>
            <div class="navbar-header">
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/Images/Logo.svg" style="height:60px; margin-left:20px;" />
                </a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
        </div>
    </div>

    <div class=" body-content" >
        <h2 style="text-align:center;color:red "> @Html.ActionLink("Book a space", "Main", "Booking", null, new { @style = "color:red; font-family: poppins-bold; font-size: 65px" }) &#9658;</h2>
        <br /><br />
        <h2 style="text-align:center; font-family: poppins-bold; font-size:26px;"> Your recent studios</h2>
         
        <div class="row">
            <div id="small-img">

                @foreach (var item in Model)
            {
                <img style="margin:10px;" src="@Url.Content(item.SpaceImgUrl)" alt="Image" />
        }
            </div>
        </div>

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Trainer Space</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
  
</body>
</html>