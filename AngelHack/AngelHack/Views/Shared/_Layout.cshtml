<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <link href="~/Content/navbar-fixed-left.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-slider.min.css" rel="stylesheet" />

    <script type="text/javascript" src="https://unpkg.com/vue"></script>
    <script type="text/javascript" src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script type="text/javascript" src="https://unpkg.com/tether@latest/dist/js/tether.min.js"></script>
    <script type="text/javascript" src="https://unpkg.com/vue-bootstrap-slider@latest/dist/vue-bootstrap-slider.js"></script>
</head>
<body class="navbar-custom">
    <div id="lMenu">
        @if (IsSectionDefined("Sidebar"))
        {
            <div class="navbar navbar-custom navbar-fixed-left">
                <div>
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Need Logo here", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    @RenderSection("Sidebar");

                </div>
            </div>
        }
        <div class="navbar navbar-custom navbar-fixed-top" style="background-color:white;">
            <div>
                <div class="navbar-header">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="~/Images/LOGO.svg" style="height:60px; margin-left:20px;" />
                    </a>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
            </div>
        </div>

        <div id="holder" class=" body-content" style="background-color:lightgray;height:100vh">
            @RenderBody()
            <hr />
            <footer>
                <div style="text-align:right;">

                    <p>&copy; @DateTime.Now.Year - Trainer Space</p>
                </div>
            </footer>
        </div>
    </div>

    @RenderSection("scripts", required: false)

    <script src="~/Scripts/VueApp.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {

            /* Example 8 */
            $("#ex8").slider({
                tooltip: 'always'
            });
        });

    </script>

</body>
</html>
