@model AngelHack.Models.MainVM

@{
    ViewBag.Title = "Main";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Main</h2>


@using (Ajax.BeginForm("MainAJAX", "Booking", Model.locationSelected + Model.StudioTypeselected + Model.dateInOut, new AjaxOptions
{
    InsertionMode = InsertionMode.Replace,
    HttpMethod = "Get",
    OnFailure = "MainLoadFailure",
    AllowCache = false,
    LoadingElementId = "",
    UpdateTargetId = "divMain",
}))

{
    @Html.AntiForgeryToken()

<div class="form-group">
    <h4>MainVM</h4>
    <hr />
    
    Time: <b>7 AM</b> &nbsp;
    <input id="dateInOut" type="text" class="span2" value="" data-slider-min="7" data-slider-max="18" data-slider-step="1" data-slider-value="[250,450]" /> &nbsp; <b>6 PM</b>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="panel-body">
        @Html.LabelFor(model => model.locationSelected, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="panel-body">
            @Html.DropDownListFor(model => model.locationSelected, Model.locationList, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.locationSelected, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="panel-body">
        @Html.LabelFor(model => model.StudioTypeselected, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="panel-body">
            @Html.DropDownListFor(model => model.StudioTypeselected, Model.StudioTypeList, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StudioTypeselected, "", new { @class = "text-danger" })
        </div>
    </div>
</div>


}

<div class="form-group" id="divMain">
    @{
    Html.RenderPartial("_Main", Model.mainList);
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Scripts/bootstrap-slider.min.js"></script>
<link href="~/Content/bootstrap-slider.min.css" rel="stylesheet"/>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script>
    $(function () {
        $("#locationSelected").change(function () {
            $(this).closest('form').submit();
        })
    });

    $(function () {
        $("#StudioTypeselected").change(function () {
            $(this).closest('form').submit();
        })
    });

    function MainLoadFailure(response) {
        $("#divStatus").html("Problem loading data....");
    }

    

    $(function () {
        $("#dateInOut").slider({
            
        });       

        $("#dateInOut").on("slide", function (slideEvt) {           
            $(this).closest('form').submit();
        });

        
    });
</script>

    <head>
        <style>
            .test123{
                data - slider - min = "7", 
                data - slider - max = "18", 
                data - slider - step = "1", 
                data - slider - value = "[250,450]"
            }
        </style>
    </head>
}
